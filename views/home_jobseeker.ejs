<%- include('./layouts/header_jobseeker.ejs') %>
<main>
  <div class="d-flex container-fluid py-2 justify-content-end">
    <div class="row pt-2 text-black text-end bg-dark-subtle rounded-2 w-50 px-2 m-2">
      <p class="mb-0">Welcome! </p>
      <p class="fst-italic fw-bold border-bottom border-black pb-1"><%= item.email %></p>
      <p class="mb-2">Name: <span class="fw-semibold"><%= item.JobSeeker.name %></span></p>
      <p class="mb-2">Skills: <span class="fw-semibold"><%= item.JobSeeker.skills %></span></p>
      <p class="mb-2">CV: <span class="fw-semibold"><%= item.JobSeeker.cv %></span></p>
      <p class="mb-2">Occupation: <span class="fw-semibold"><%= item.JobSeeker.occupation %></span></p>
      <p>Location: <span class="fw-semibold"><%= item.JobSeeker.location %></span></p>
    </div>
  </div>
    <div class="container h-25 w-100">
      <div class="col-md-8">
        <h1 class="mb-4">Best Matches Jobs</h1>
        <% if (jobPosts.length === 0) { %>
          <p>There are no best job matches for you at the moment.</p>
        <% } else { %>
          <ul class="list-group">
            <% jobPosts.forEach(item => { %>
              <li class="list-group-item">
                <a href="/job-post/<%= item.id %>"><%= item.title %> - <%= item.companyName %></a>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>      
    </div>
</main>
<%- include('./layouts/footer.ejs') %>