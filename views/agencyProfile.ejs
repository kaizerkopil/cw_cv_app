<%- include('./layouts/header_agency') %>
<main class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="card-title mb-4"><%= user.Agency.name %></h1>
      <div class="card">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-6">
              <p>Email: <%= user.email %></p>
              <p>Phone No: <%= user.Agency.phonenum %></p>
              <p>Location: <%= user.Agency.location %></p>
              <p>Address: <%= user.Agency.address %></p>
              <p>Description: <%= user.Agency.description %></p>
              <!-- Add other agency details here -->
            </div>
          </div>
          <div>
            <a
              href="#"
              id="editProfileButton"
              class="btn btn-warning me-2"
              data-bs-toggle="modal"
              data-bs-target="#editProfileModal"
              >Edit Profile</a
            >
          </div>
        </div>
      </div>
      <div class="mb-4">
        <h3 class="mt-4 mb-3">Job Postings</h3>
        <% if(successMessage) { %>
        <div class="alert alert-success" role="alert">
          <%= successMessage %>
        </div>
        <% } %> <% if(user.Agency && user.Agency.Jobs && user.Agency.Jobs.length
        > 0) { %>
        <ul class="list-group">
          <% user.Agency.Jobs.forEach(job => { %>
          <li class="list-group-item">
            <h5><%= job.title %></h5>
            <p><strong>Pay:</strong> <%= job.pay %></p>
            <p><strong>Location:</strong> <%= job.jobLocation %></p>
            <p><strong>Skills Required:</strong> <%= job.skillsRequired %></p>
            <p><strong>Description:</strong> <%= job.description %></p>
            <!-- Add edit and delete buttons for each job posting -->
            <div class="btn-group">
              <button
                type="button"
                class="btn btn-primary me-2"
                data-bs-toggle="modal"
                data-bs-target="#editJobModal<%= job.id %>"
              >
                Edit
              </button>
              <button
                type="button"
                class="btn btn-danger"
                data-bs-toggle="modal"
                data-bs-target="#deleteJobModal<%= job.id %>"
              >
                Delete
              </button>
            </div>
          </li>

          <!-- Edit Job Modal -->
<div class="modal fade" id="editJobModal<%= job.id %>" tabindex="-1" aria-labelledby="editJobModalLabel<%= job.id %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editJobModalLabel<%= job.id %>">Edit Job</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Edit Job Form -->
        <form action="/edit-job/<%= job.id %>" method="POST">
          <!-- Job Title -->
          <div class="mb-3">
            <label for="editTitle<%= job.id %>" class="form-label">Title</label>
            <input type="text" class="form-control" id="editTitle<%= job.id %>" name="title" value="<%= job.title %>" required>
          </div>
          <!-- Pay -->
          <div class="mb-3">
            <label for="editPay<%= job.id %>" class="form-label">Pay</label>
            <input type="text" class="form-control" id="editPay<%= job.id %>" name="pay" value="<%= job.pay %>" required>
          </div>
          <!-- Location -->
          <div class="mb-3">
            <label for="editLocation<%= job.id %>" class="form-label">Location</label>
            <input type="text" class="form-control" id="editLocation<%= job.id %>" name="jobLocation" value="<%= job.jobLocation %>" required>
          </div>
          <!-- Skills Required -->
          <div class="mb-3">
            <label for="editSkills<%= job.id %>" class="form-label">Skills Required</label>
            <input type="text" class="form-control" id="editSkills<%= job.id %>" name="skillsRequired" value="<%= job.skillsRequired %>" required>
          </div>
          <!-- Description -->
          <div class="mb-3">
            <label for="editDescription<%= job.id %>" class="form-label">Description</label>
            <textarea class="form-control" id="editDescription<%= job.id %>" name="description" rows="3" required><%= job.description %></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


          <!-- Delete Job Modal -->
          <div
            class="modal fade"
            id="deleteJobModal<%= job.id %>"
            tabindex="-1"
            aria-labelledby="deleteJobModalLabel<%= job.id %>"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="deleteJobModalLabel<%= job.id %>">
                    Delete Job
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <p>Are you sure you want to delete this job post?</p>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <form action="/delete-job/<%= job.id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <!-- Edit Profile Modal -->
          <div
            class="modal fade"
            id="editProfileModal"
            tabindex="-1"
            aria-labelledby="editProfileModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="editProfileModalLabel">
                    Edit Profile
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <!-- Edit Profile Form -->
                  <form action="/edit-profile-agency" method="POST">
                    <!-- Name -->
                    <div class="mb-3">
                      <label for="name" class="form-label">Agency Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        value="<%= user.Agency.name %>"
                        required
                      />
                    </div>
                    <!-- Email -->
                    <div class="mb-3">
                      <label for="email" class="form-label">Email</label>
                      <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value="<%= user.email %>"
                        required
                      />
                    </div>
                    <!-- Phone Number -->
                    <div class="mb-3">
                      <label for="phonenum" class="form-label"
                        >Phone Number</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="phonenum"
                        name="phonenum"
                        value="<%= user.Agency.phonenum %>"
                        required
                      />
                    </div>
                    <!-- Address -->
                    <div class="mb-3">
                      <label for="address" class="form-label">Address</label>
                      <input
                        type="text"
                        class="form-control"
                        id="address"
                        name="address"
                        value="<%= user.Agency.address %>"
                        required
                      />
                    </div>
                    <!-- Description -->
                    <div class="mb-3">
                      <label for="description" class="form-label"
                        >Description</label
                      >
                      <textarea
                        class="form-control"
                        id="description"
                        name="description"
                        rows="3"
                        required
                      >
<%= user.Agency.description %></textarea
                      >
                    </div>
                    <!-- Location -->
                    <div class="mb-3">
                      <label for="location" class="form-label">Location</label>
                      <input
                        type="text"
                        class="form-control"
                        id="location"
                        name="location"
                        value="<%= user.Agency.location %>"
                        required
                      />
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                      >
                        Close
                      </button>
                      <button type="submit" class="btn btn-primary">
                        Save Changes
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <% }) %>
        </ul>
        <% } else { %>
        <p class="text-muted">No job postings yet.</p>
        <% } %>
      </div>
    </div>
  </div>
</main>
<%- include('./layouts/footer') %>
